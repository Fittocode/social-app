
<div class="container">
    <h1>{{profile.username}}</h1>
    {{#each posts}}
    <div class="card mt-4" onclick="location.href='/{{this._id}}';">
        <div class="card-body">
            <h3 class="card-title">{{this.title}}</h3>
            <div class="card-text mb-2">
            <p>{{this.content}}</p>
            <p>{{this.favorited}} favorited, {{this.comments.length}} comments</p>
            </div>
        </div>
    </div>
    {{/each}}
</div>
