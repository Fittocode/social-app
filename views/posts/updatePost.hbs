
<div class="container-md">
<h2>Update Post</h2>
<form action="/update/{{post._id}}" method="post">
    <div class="form-group">
        <label for="content" name="content"></label>
        <textarea placeholder='{{post.content}}' type="text" name="content" class="form-control"></textarea>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Update</button>
    <a href="/user-profile" class="btn btn-secondary">Cancel</a>
</form>
</div>

